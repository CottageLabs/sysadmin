server {
    listen          80;
    server_name     doaj.org www.doaj.org doaj.cottagelabs.com;

    access_log /var/log/nginx/doaj.access.log;
    error_log /var/log/nginx/doaj.error.log;

    set_real_ip_from 95.85.56.138;

    location / {
        proxy_pass http://localhost:5050/;
        proxy_redirect off;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    }

    location  /static/ {
        alias /opt/doaj/src/doaj/portality/static/;
        autoindex off;
        expires max;
    }

    location /nginx_status {
        stub_status on;
        access_log off;
        allow 127.0.0.1;
        deny all;
    }
}

server {
    listen          5550;
    server_name     95.85.59.151;

    access_log /var/log/nginx/doaj.access.log;
    error_log /var/log/nginx/doaj.error.log;

    location / {
        proxy_pass http://localhost:5050/;
        proxy_redirect off;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    }
}
